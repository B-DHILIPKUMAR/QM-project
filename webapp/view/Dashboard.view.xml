<mvc:View
    controllerName="quality.quality.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page title="Quality Engineer Dashboard">
        <headerContent>
            <Button icon="sap-icon://log" press="onLogout" tooltip="Logout" />
        </headerContent>
        <content>
            <HBox wrap="Wrap" class="sapUiSmallMargin">
                <GenericTile class="sapUiTinyMargin" header="Inspection Lots" subheader="View and Manage" press="onNavigation">
                    <TileContent>
                        <ImageContent src="sap-icon://BusinessSuiteInAppSymbols/icon-inspection-lot" />
                    </TileContent>
                    <customData>
                        <core:CustomData key="route" value="InspectionLot" />
                    </customData>
                </GenericTile>
                
                <GenericTile class="sapUiTinyMargin" header="Result Recording" subheader="Enter Values" press="onNavigation">
                    <TileContent>
                        <ImageContent src="sap-icon://create-entry-time" />
                    </TileContent>
                    <customData>
                        <core:CustomData key="route" value="ResultRecordingList" /> 
                    </customData>
                </GenericTile>

                <GenericTile class="sapUiTinyMargin" header="Usage Decision" subheader="Approve/Reject Lots" press="onNavigation">
                    <TileContent>
                        <ImageContent src="sap-icon://decision" />
                    </TileContent>
                    <customData>
                        <core:CustomData key="route" value="UsageDecisionList" />
                    </customData>
                </GenericTile>
            </HBox>
        </content>
    </Page>
</mvc:View>

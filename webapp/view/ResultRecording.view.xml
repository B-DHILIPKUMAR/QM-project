<mvc:View
    controllerName="quality.quality.controller.ResultRecording"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page title="Result Recording: {/Prueflos}" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <ObjectHeader
                title="Inspection Lot: {/Prueflos}"
                number="{/MaterialNumber}"
                numberUnit="Material">
                <attributes>
                    <ObjectAttribute title="Plant" text="{/Plant}" />
                    <ObjectAttribute title="Inspection Type" text="{/InspectionType}" />
                    <ObjectAttribute title="Operation" text="{/OperationNo}" />
                    <ObjectAttribute title="Characteristic" text="{/CharacteristicNo}" />
                </attributes>
                <statuses>
                    <ObjectStatus title="Status" text="{/Status}" state="None" />
                    <ObjectStatus title="Result Code" text="{/ResultCode}" state="Information" />
                </statuses>
            </ObjectHeader>

            <f:SimpleForm editable="true" layout="ResponsiveGridLayout" title="Record Quantities" enabled="{/isEditable}">
                <f:content>
                    <core:Title text="Reference Data" />
                    <Label text="Object Number" />
                    <Text text="{/ObjectNumber}" />
                    <Label text="Object Type" />
                    <Text text="{/ObjectType}" />

                    <core:Title text="Enter Results" />
                    <Label text="Unrestricted Stock" />
                    <Input value="{/UnrestrictedQty}" type="Number" />
                    
                    <Label text="Blocked Stock" />
                    <Input value="{/BlockedQty}" type="Number" />

                    <Label text="Production Stock" />
                    <Input value="{/ProductionQty}" type="Number" />
                    
                    <Label text="Remarks" />
                    <TextArea value="{/Remarks}" rows="3" />
                </f:content>
            </f:SimpleForm>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button text="Save" type="Emphasized" press="onSave" enabled="{/isEditable}" />
                <Button text="Cancel" press="onNavBack" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
